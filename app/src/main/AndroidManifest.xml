<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ebenezer.gana.shoppyv2">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shoppy">
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.DashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.MyOrderDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.CheckoutActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.AddEditAddressActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.AddressListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.CartListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.ProductDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />

        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.UserProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.ForgotPasswordActivity"
            android:exported="false"
            android:label="Reset Password"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.BaseActivity"
            android:exported="false" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>